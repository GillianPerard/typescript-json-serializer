{
    "name": "typescript-json-serializer",
    "version": "3.4.4",
    "description": "Typescript library to serialize classes into json and deserialize json into classes.",
    "source": "src/index.ts",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rollup -c",
        "cover": "jest --coverage",
        "lint": "eslint . --ext .ts --fix",
        "lint:ci": "eslint . --ext .ts",
        "postbuild": "npm run types",
        "prebuild": "rimraf dist",
        "test": "jest",
        "test:ci": "jest --reporters=default --reporters=jest-junit --coverage --coverageReporters=lcov --coverageReporters=text-lcov",
        "types": "tsc src/index.ts -d --emitDeclarationOnly --declarationDir dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GillianPerard/typescript-json-serializer.git"
    },
    "author": "Gillian PÃ©rard",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/GillianPerard/typescript-json-serializer/issues"
    },
    "homepage": "https://github.com/GillianPerard/typescript-json-serializer#readme",
    "keywords": [
        "json",
        "typescript",
        "serializer",
        "deserializer",
        "decorator",
        "metadata"
    ],
    "dependencies": {
        "reflect-metadata": "^0.1.13",
        "tslib": "^2.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-typescript": "^8.2.1",
        "@types/jest": "^26.0.23",
        "@types/node": "^16.0.0",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/eslint-plugin-tslint": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsdoc": "^35.4.1",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "jest-junit": "^12.2.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.52.7",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.5"
    }
